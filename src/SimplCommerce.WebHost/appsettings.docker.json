{
  "ConnectionStrings": {
    "DefaultConnection": "User ID=postgres;Password=postgres;Host=simpldb;Port=5432;Database=simplcommerce;Pooling=true;"
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "Storage": {
    "StorageType": "AzureStorage", //Set "AzureStorage" or "LocalStorage"
    "AzureStorage": {
      "StoragePath": "http://127.0.0.1:10000/devstoreaccount1/images/",
      "StorageConnectionString": "DefaultEndpointsProtocol=https;AccountName=account-name;AccountKey=account-key"
    }
  },
  "Azure": {
    "Blob": {
      "StorageConnectionString": "UseDevelopmentStorage=true;",
      "StorageContainer": "ecomm",
      "RetryOnFailure": false,
      "PublicEndpoint": "http://127.0.0.1:10000/"
    }
  }
}
