    @RenderSection("head", required: false)
</head>
<body>
    <header id="header">
        <div class="bg"></div>
        <nav class="navbar navbar-airticket" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-register">
                        <span class="sr-only">Toggle navigation</span>
                        <i class="fa fa-2x fa-bars"></i>
                    </button>
                    <a href="/"><img class="navbar-brand" src="~/themes/AirlineTickets/img/logo-white.png" /></a>
                </div>
                <div class="collapse navbar-collapse" id="navbar-register">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#" class="no-border" data-toggle="modal" data-target="#rezKontrol"><i class="fa fa-check"></i><span class="currency">Check Reservation</span></a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle no-border" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-try"></i><span class="currency">Currency</span></a>
                            <ul class="dropdown-menu">
                                <li><a href="#"><i class="fa fa-try"></i><span class="currency">Turkish Lira</span></a></li>
                                <li><a href="#"><i class="fa fa-usd"></i><span class="currency">USA Dollar</span></a></li>
                                <li><a href="#"><i class="fa fa-eur"></i><span class="currency">Euro</span></a></li>
                            </ul>
                        </li>
                        @await Html.PartialAsync("_SelectLanguagePartial")
                        @await Html.PartialAsync("_LoginPartial")
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
        </nav>
       
        <!-- Modal -->
        <div class="modal fade" id="rezKontrol" tabindex="-1" role="dialog" aria-labelledby="rezKontrolLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="rezKontrolLabel">Check Reservation</h4>
                    </div>
                    <div class="modal-body">
                        <form class="modal-form" action="#" method="post" accept-charset="utf-8">
                            <div class="form-group">
                                <label class="sr-only" for="rez-no">Reservation Number</label>
                                <input type="text" class="form-control" id="rez-no" placeholder="Reservation Number">
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="rez-soyadi">Lastname</label>
                                <input type="text" class="form-control" id="rez-soyadi" placeholder="Lastname">
                            </div>
                            <button type="submit" class="btn btn-rez">Find Reservation</button>
                            <a href="#" class="btn btn-rez">Cancel & Refund</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- /header -->
    <main>
        <section id="promotions">
            <div class="container">
                <div class="row">
                    @RenderBody()
                </div>
            </div>
        </section>

        <section id="register-now" class="valign-wrapper">
            <div class="overlay"></div>
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 text-center">
                        <h2>Now, register and see our campaigns!</h2>
                        <a class="btn btn-special" href="#">Register Now</a>
