    <script src="~/themes/AirlineTickets/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/themes/AirlineTickets/js/bootstrap-spinner.js"></script>
    <script src="~/themes/AirlineTickets/js/jquery.easy-autocomplete.min.js"></script>
    <script src="~/themes/AirlineTickets/js/main.js"></script>

    <script>
            $(function () {
                $('#gidis-tarihi').datetimepicker({
                    format: 'DD MMMM YYYY'
                });
                $('#donus-tarihi').datetimepicker({
                    useCurrent: false, //Important! See issue #1075
                    format: 'DD MMMM YYYY'
                });
                $("#gidis-tarihi").on("dp.change", function (e) {
                    $('#donus-tarihi').data("DateTimePicker").minDate(e.date);
                });
                $("#donus-tarihi").on("dp.change", function (e) {
                    $('#gidis-tarihi').data("DateTimePicker").maxDate(e.date);
                });

                var options = {
                    url: "data/airports.json",

                    getValue: "name",

                    list: {
                        match: {
                            enabled: true
                        },
                        showAnimation: {
                            type: "fade", //normal|slide|fade
                            time: 400,
                            callback: function () { }
                        },
                        hideAnimation: {
                            type: "slide", //normal|slide|fade
                            time: 400,
                            callback: function () { }
                        }
                    }
                };
                $("#kalkis-yeri, #inis-yeri").easyAutocomplete(options);
            });
    </script>

    @RenderSection("scripts", required: false)
</body>

</html>
